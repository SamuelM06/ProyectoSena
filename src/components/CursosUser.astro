---
const { score, title, img, category} = Astro.props
---

<article class="w-[284px] h-[330px] flex flex-col gap-3 items-center bg-white p-3 rounded-3xl mb-[150px] bg-[#F9F8F8] shadow-2xl bg-opacity-25">
    <picture>
        <img src={img} class=" bg-slate-400 rounded-3xl"></img>
    </picture>
    <div class="w-full text-black font-bold text-lg">
        <h3 class="truncate">{title}</h3>
    </div>
    <div class="text-black flex flex-col w-full">
        <div class="flex gap-2">
            <div>
                <span class="font-semibold text-gray-600">{score}</span>
            </div>
            <div class="text-yellow-500">
                <slot name="stars"/>
            </div>
        </div>
        <div>
            <span class="font-medium text-gray-600 text-sm">{category}</span>
        </div>
    </div>
</article>